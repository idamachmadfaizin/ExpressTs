{
	"name": "express-ts",
	"version": "1.0.0",
	"description": "The ExpressJs + Typescript + Webpack starter project",
	"scripts": {
		"start": "nodemon",
		"build": "webpack",
		"build:ts": "tsc --build --clean & tsc --build",
		"build:webpack": "webpack",
		"dev": "node dist/webpack",
		"lint": "eslint src",
		"test:security": "snyk test"
	},
	"keywords": [
		"express",
		"expressjs",
		"expressts",
		"expressjs typescript",
		"typescript",
		"webpack"
	],
	"author": "Idamachmadfaizin",
	"license": "MIT",
	"dependencies": {
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"http-status-codes": "^2.3.0",
		"morgan": "^1.10.0",
		"serve-favicon": "^2.5.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.2.0",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/hpp": "^0.2.6",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.12.8",
		"@types/serve-favicon": "^2.5.7",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/webpack": "^5.28.5",
		"copy-webpack-plugin": "^12.0.2",
		"eslint": "^9.2.0",
		"globals": "^15.1.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"snyk": "^1.1291.0",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.8.0",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	},
	"nodemonConfig": {
		"watch": [
			"src",
			".env"
		],
		"exec": "ts-node --transpileOnly src/index.ts --trace-sync-io",
		"ext": "js,ts,json,yaml",
		"ignore": [
			"test",
			"src/**/*.spec.ts",
			"src/**/*.test.ts"
		]
	}
}
